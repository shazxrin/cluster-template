apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  labels:
    app.kubernetes.io/name: backbone
    app.kubernetes.io/part-of: argocd
  name: backbone
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ cluster_repository_url }}
    targetRevision: HEAD
    path: backbone
    directory:
      recurse: true
      exclude: "{minio/minio-credentials-secret.yaml,postgres/postgres-credentials-secret.yaml,rabbitmq/rabbitmq-credentials-secret.yaml}"
  destination:
    server: https://kubernetes.default.svc
    namespace: backbone
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
      allowEmpty: true
    syncOptions:
      - CreateNamespace=true
