apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  labels:
    app.kubernetes.io/name: one-percent-better
    app.kubernetes.io/part-of: argocd
  name: one-percent-better
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ cluster_repository_url }}
    targetRevision: HEAD
    path: one-percent-better
    directory:
      recurse: true
      exclude: "{one-percent-better-app-configuration-secret.yaml,one-percent-better-webapp-configuration-secret.yaml}"
  destination:
    server: https://kubernetes.default.svc
    namespace: one-percent-better
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
      allowEmpty: true
    syncOptions:
      - CreateNamespace=true
